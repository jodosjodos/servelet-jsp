<!--    home servelete-->
    <servlet>
        <servlet-name>home</servlet-name>
        <servlet-class>com.servlet.serveletbeginner.HomeServlet</servlet-class>
        <init-param>
            <param-name>name</param-name>
            <param-value>Jean-de-Dieu</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>home</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
<!--    initial value for your servlet-->
    <context-param>
        <param-name>name</param-name>
        <param-value>jodos</param-value>
    </context-param>
    <context-param>
